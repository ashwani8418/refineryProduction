<mvc:View
	controllerName="nm.refineryconfig.controller.refinery"
	xmlns="sap.suite.ui.commons.networkgraph"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:layout="sap.suite.ui.commons.networkgraph.layout"
	xmlns:m="sap.m"
	height="100%"
>

	<l:FixFlex vertical="true">
		<l:flexContent>
			<m:FlexBox
				fitContainer="true"
				renderType="Bare"
				wrap="Wrap"
				id="graphWrapper"
			>
				<m:items>
					<Graph
						enableWheelZoom="false"
						orientation="{settings>/orientation}"
						nodes="{/nodes}"
						lines="{/lines}"
						groups="{/groups}"
						id="graph"
					>
						<statuses>
							<Status
								key="CustomSuccess"
								title="Success"
								contentColor="sapUiCalendarColorToday"
								headerContentColor="sapUiCalendarColorToday"
								borderColor="sapUiCalendarColorToday"
								selectedBackgroundColor="sapUiChartPaletteQualitativeHue10"
								selectedBorderColor="sapUiChartPaletteQualitativeHue10"
								selectedContentColor="red"
								hoverBorderColor="sapUiCalendarColorToday"
								hoverContentColor="black"
								hoverBackgroundColor="sapUiCalendarColorToday"
								legendColor="sapUiCalendarColorToday"
								useFocusColorAsContentColor="true"
							/>
							<Status
								key="LineStatus"
								title="Line status"
								borderColor="sapUiContentShadowColor"
								backgroundColor="sapUiContentShadowColor"
								hoverBorderColor="sapUiContentShadowColor"
								hoverBackgroundColor="sapUiContentShadowColor"
								legendColor="sapUiContentShadowColor"
							/>
							<Status
								key="CustomGreen"
								title="Green Node"
								backgroundColor="green"
								borderColor="sapUiContentShadowColor"
								hoverBorderColor="sapUiContentShadowColor"
							/>
							<Status
								key="CustomBlue"
								title="Blue Node"
								backgroundColor="sapUiChartPaletteSequentialHue1Light3"
								borderColor="sapUiContentShadowColor"
								hoverBorderColor="sapUiContentShadowColor"
							/>
							<Status
								key="CustomPink"
								title="Pink Node"
								backgroundColor="sapUiChartPaletteQualitativeHue8"
								borderColor="sapUiContentShadowColor"
								hoverBorderColor="sapUiContentShadowColor"
							/>
							<Status
								key="CustomRed"
								title="Red Node"
								backgroundColor="sapUiChartPaletteSemanticBad"
								borderColor="sapUiContentShadowColor"
								hoverBorderColor="sapUiContentShadowColor"
							/>
							<Status
								key="CustomGrey"
								title="Grey Node"
								backgroundColor="sapUiChartPaletteSemanticNeutralLight3"
								borderColor="sapUiContentShadowColor"
								hoverBorderColor="sapUiContentShadowColor"
							/>
							<Status
								key="CustomLightGrey"
								title="Light Grey Node"
								backgroundColor="sapUiChartPaletteSequentialNeutralDark1"
								borderColor="sapUiContentShadowColor"
								hoverBorderColor="sapUiContentShadowColor"
							/>
							<Status
								key="CustomYellow"
								title="Yellow Node"
								backgroundColor="yellow"
								borderColor="sapUiContentShadowColor"
								hoverBorderColor="sapUiContentShadowColor"
							/>
							<Status
								key="CustomLightGreen"
								title="Light Green Node"
								backgroundColor="sapUiChartPaletteSemanticGoodLight2"
								borderColor="sapUiContentShadowColor"
								hoverBorderColor="sapUiContentShadowColor"
							/>
							<Status
								key="CustomLightBlue"
								title="Light Blue Node"
								backgroundColor="sapUiChartPaletteSequentialHue1Light2"
								borderColor="sapUiContentShadowColor"
								hoverBorderColor="sapUiContentShadowColor"
							/>
							<Status
								key="CustomeWhite"
								title="White Node"
								backgroundColor="white"
								borderColor="sapUiContentShadowColor"
								hoverBorderColor="sapUiContentShadowColor"
							/>
							<Status
								key="CustomStandardGroup"
								title="Standard"
								borderColor="sapUiContentShadowColor"
								backgroundColor="sapUiNeutralBorder"
								hoverBackgroundColor="sapUiNeutralBorder"
								hoverContentColor="sapUiFieldWarningColor"
								contentColor="sapUiFieldHelpBackground"
								useFocusColorAsContentColor="true"
								legendColor="sapUiContentShadowColor"
							/>
							<Status
								key="AttributeLabel"
								contentColor="sapUiCalendarColorToday"
								hoverContentColor="red"
								selectedContentColor="red"
							/>
							<Status
								key="AttributeValue"
								contentColor="green"
							/>
							<Status
								key="AttributeLabel"
								contentColor="green"
							/>
							<Status
								key="Dashed"
								borderWidth="2px"
								borderStyle="dashed"
							/>
							<Status
								key="LineBorderStatus"
								title="Line border status"
								borderColor="red"
								backgroundColor="red"
								borderWidth="2px"
								borderStyle="3,3"
							/>
							<Status
								key="GroupCustomStatus"
								title="Group custom status"
								contentColor="white"
								backgroundColor="darkblue"
								borderColor="darkblue"
							/>
						</statuses>
						<layoutData>
							<m:FlexItemData
								growFactor="1"
								shrinkFactor="1"
								baseSize="0%"
								minWidth="100px"
							/>
						</layoutData>
						<layoutAlgorithm>
							<layout:LayeredLayout
								mergeEdges="{settings>/mergeEdges}"
								nodePlacement="Simple"
								nodeSpacing="40"
							/>
						</layoutAlgorithm>
						<nodes>
							<Node
								maxWidth="40"
								headerCheckBoxState="{headerCheckBoxState}"
								key="{key}"
								title="{title}"
								icon="{icon}"
								group="{group}"
								attributes="{
									path: 'attributes',
									templateShareable: true
								}"
								shape="{shape}"
								status="{status}"
								press="onOpenDialog"
							>
								<attributes>
									<ElementAttribute
										icon="{icon}"
										labelStatus="{status}"
										valueStatus="{status}"
										label="{label}"
										value="{value}"
									/>
								</attributes>
							</Node>
						</nodes>
						<lines>
							<Line
								arrowPosition="{settings>/arrowPosition}"
								arrowOrientation="{settings>/arrowOrientation}"
								from="{from}"
								to="{to}"
								status="{status}"
							>
								<actionButtons>
									<ActionButton icon="sap-icon://lab" />
									<ActionButton icon="sap-icon://bubble-chart" />
								</actionButtons>
							</Line>
						</lines>
						<groups>
							<Group
								key="{key}"
								icon="sap-icon://measure"
								headerCheckBoxState="{headerCheckboxState}"
								title="{title}"
								status="{status}"
							/>
						</groups>
					</Graph>
				</m:items>
			</m:FlexBox>
		</l:flexContent>
	</l:FixFlex>
</mvc:View>
